<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Title</th>
      <th>Release<br>Year</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <!-- 'DETAILS' Anchor Tags Applied in multiples via forEach loop -->
    <% movies.forEach(function(g) { %>
      <tr>
        <td><%= g.title %></td>
        <td><%= g.releaseYear %></td>
        <td><a href="/games/<%= g._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>
